<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp"
    android:background="#e0f7db"
    android:gravity="center_horizontal">

    <!-- Título e Logo do Usuário -->
    <ImageView
        android:id="@+id/logoImage2"
        android:layout_width="390dp"
        android:layout_height="95dp"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="24dp"
        android:src="@drawable/ic_logo"
        tools:ignore="ContentDescription" />

    <!-- Botão Cadastro de Produtos -->
    <TextView
        android:layout_marginTop="30dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="24dp"
        android:drawablePadding="8dp"
        android:gravity="center"
        android:text="USUÁRIO PADRÃO"
        android:textSize="20sp"
        android:textColor="@color/black"
        android:textStyle="bold"
        tools:ignore="HardcodedText" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:layout_marginTop="16dp"
        android:onClick="openCadastroProdutos"
        android:layout_marginRight="25dp"
        tools:ignore="UseCompoundDrawables">

        <ImageView
            android:layout_width="51dp"
            android:layout_height="39dp"
            android:contentDescription="Cadastro de Produtos"
            android:src="@drawable/ic_add_product_icon"
            tools:ignore="HardcodedText" />

        <TextView
            android:layout_width="260dp"
            android:layout_height="46dp"
            android:background="@drawable/colors_botao"
            android:gravity="center_horizontal"
            android:paddingStart="16dp"
            android:paddingTop="10dp"
            android:paddingEnd="16dp"
            android:paddingBottom="8dp"
            android:text="Cadastro de Produtos"
            android:textColor="@color/white"
            android:textSize="18sp"
            android:textStyle="bold"
            tools:ignore="HardcodedText" />
    </LinearLayout>

    <!-- Botão Cadastro de Fornecedores -->
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:layout_marginTop="16dp"
        android:layout_marginRight="25dp"
        android:onClick="openCadastroFornecedores"
        tools:ignore="UseCompoundDrawables">

        <ImageView
            android:layout_width="51dp"
            android:layout_height="39dp"
            android:contentDescription="Cadastro de Fornecedores"
            android:src="@drawable/ic_add_supplier_icon"
            tools:ignore="HardcodedText" />

        <TextView
            android:layout_width="260dp"
            android:layout_height="48dp"
            android:layout_marginTop="2dp"
            android:background="@drawable/colors_botao"
            android:gravity="center_horizontal"
            android:paddingStart="16dp"
            android:paddingTop="10dp"
            android:paddingEnd="16dp"
            android:paddingBottom="8dp"
            android:text="Cadastro de Fornecedores"
            android:textColor="@color/white"
            android:textSize="18sp"
            android:textStyle="bold"
            tools:ignore="HardcodedText" />
    </LinearLayout>

    <!-- Botão Gerar Relatório -->
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:layout_marginTop="16dp"
        android:layout_marginRight="25dp"
        android:onClick="openRelatorio"
        tools:ignore="UseCompoundDrawables">

        <ImageView
            android:layout_width="51dp"
            android:layout_height="39dp"
            android:contentDescription="Gerar Relatório"
            android:src="@drawable/ic_report_icon"
            tools:ignore="HardcodedText" />

        <TextView
            android:layout_width="260dp"
            android:layout_height="46dp"
            android:layout_marginTop="2dp"
            android:background="@drawable/colors_botao"
            android:gravity="center_horizontal"
            android:paddingStart="16dp"
            android:paddingTop="10dp"
            android:paddingEnd="16dp"
            android:paddingBottom="8dp"
            android:text="Gerar Relatório"
            android:textColor="@color/white"
            android:textSize="18sp"
            android:textStyle="bold"
            tools:ignore="HardcodedText" />
    </LinearLayout>

    <!-- Botão Sair -->
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:layout_marginTop="77dp"
        android:layout_marginRight="25dp"
        android:onClick="logout"
        tools:ignore="UseCompoundDrawables">

        <ImageView
            android:layout_width="34dp"
            android:layout_height="34dp"
            android:src="@drawable/ic_logout_icon"
            android:contentDescription="Sair"
            tools:ignore="HardcodedText" />

        <TextView
            android:layout_width="100dp"
            android:onClick="logout"
            android:layout_height="wrap_content"
            android:background="@drawable/botao_sair"
            android:gravity="center_horizontal"
            android:paddingStart="16dp"
            android:paddingTop="8dp"
            android:paddingEnd="16dp"
            android:paddingBottom="8dp"
            android:text="Sair"
            android:textColor="#F44336"
            android:textSize="16sp"
            android:textStyle="bold"
            tools:ignore="HardcodedText" />

    </LinearLayout>
</LinearLayout>