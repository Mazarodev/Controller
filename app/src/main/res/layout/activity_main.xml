<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:gravity="center"
    android:background="#D3D3D3"
    android:padding="16dp">

    <!-- Logo -->

    <!-- Título -->
    <ImageView
        android:id="@+id/logoImage"
        android:layout_width="163dp"
        android:layout_height="148dp"
        android:src="@drawable/your_logo"
        tools:ignore="ContentDescription" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="CONTROLE DE ESTOQUE"
        android:textSize="20sp"
        android:textStyle="bold"
        android:layout_marginTop="16dp"
        android:textColor="#000"
        tools:ignore="HardcodedText" />

    <!-- Ícone do Usuário -->
    <ImageView
        android:id="@+id/userIcon"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:src="@drawable/ic_user"
        android:layout_marginTop="16dp"
        tools:ignore="ContentDescription" />

    <!-- Campo de e-mail -->
    <EditText
        android:id="@+id/campoEmail"
        android:background="@drawable/botao_sair"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint=" E-mail"
        android:inputType="textEmailAddress"
        android:drawableLeft="@drawable/ic_email"
        android:layout_marginTop="11dp"
        android:padding="12dp"
        tools:ignore="Autofill,HardcodedText,RtlHardcoded" />

    <!-- Campo de senha -->
    <EditText
        android:id="@+id/campoSenha"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/botao_sair"
        android:hint=" Senha"
        android:inputType="textPassword"
        android:drawableLeft="@drawable/ic_password"
        android:layout_marginTop="15dp"
        android:padding="12dp"
        tools:ignore="Autofill,HardcodedText,RtlHardcoded" />

    <!-- Botão de login -->
    <Button
        android:id="@+id/btLogin"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Entrar"
        android:textSize="18dp"
        android:layout_marginTop="16dp"
        android:backgroundTint="#4CAF50"
        android:textColor="#FFF"
        tools:ignore="HardcodedText,SpUsage" />

    <!-- Ícone de impressão digital -->
    <ImageView
        android:id="@+id/fingerprintIcon"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:src="@drawable/ic_fingerprint"
        android:layout_marginTop="16dp"
        tools:ignore="ContentDescription" />

    <!-- Links de esquecimento de senha e cadastro -->
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="16dp">

        <TextView
            android:id="@+id/EsqueceuSenhaLink"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Esqueceu sua senha?"
            android:textColor="#4A90E2"
            android:textSize="14sp"
            android:paddingEnd="8dp"
            tools:ignore="HardcodedText,RtlSymmetry" />

        <TextView
            android:id="@+id/CadastroLink"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Não possui conta? Registre-se"
            android:textColor="#FF6347"
            android:textSize="14sp"
            tools:ignore="HardcodedText" />
    </LinearLayout>

</LinearLayout>