<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp"
    android:background="@drawable/botao_sair">

    <ImageView
        android:layout_width="142dp"
        android:layout_height="118dp"
        android:layout_gravity="center"
        android:layout_marginTop="32dp"
        android:src="@drawable/your_logo"
        tools:ignore="ContentDescription" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="RELATÓRIO PDF DA CONTAGEM"
        android:textStyle="bold"
        android:textSize="20sp"
        android:gravity="center"
        tools:ignore="HardcodedText" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="DATA:2023/11/20 HORÁRIO:17:17"
        android:textSize="14sp"
        android:gravity="center"
        tools:ignore="HardcodedText" />

    <ImageView
        android:layout_width="356dp"
        android:layout_height="427dp"
        android:layout_marginLeft="11dp"
        android:background="@drawable/botao_sair"
        android:scaleType="fitXY"
        android:src="@drawable/ic_tabela"
        tools:ignore="ContentDescription,RtlHardcoded" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="64dp"
        android:background="@drawable/colors_botao"
        android:orientation="horizontal"
        android:padding="10dp">

        <ImageView
            android:layout_width="44dp"
            android:layout_height="44dp"
            android:layout_marginRight="108dp"
            android:src="@drawable/ic_search"
            tools:ignore="ContentDescription,RtlHardcoded" />

        <ImageView
            android:layout_width="44dp"
            android:layout_height="44dp"
            android:layout_marginRight="108dp"
            android:src="@drawable/ic_download_relatorio"
            tools:ignore="ContentDescription,RtlHardcoded" />

        <ImageView
            android:layout_width="44dp"
            android:layout_height="44dp"
            android:src="@drawable/ic_iconback"
            tools:ignore="ContentDescription" />
    </LinearLayout>


</LinearLayout>