<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="#e0f7db"
    android:padding="16dp">

        <!-- Tela Inicial -->
        <LinearLayout
            android:id="@+id/layout_tela_inicial"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_width="374dp"
            android:layout_height="500dp"
            android:orientation="vertical"
            android:visibility="visible"
            tools:layout_editor_absoluteX="16dp"
            tools:layout_editor_absoluteY="16dp">

                <!-- Botão de voltar -->

                <!-- Logo -->
                <ImageView
                    android:layout_gravity="center"
                    android:id="@+id/logo"
                    android:layout_width="390dp"
                    android:layout_height="95dp"
                    android:layout_marginTop="6dp"
                    android:contentDescription="Logo do aplicativo"
                    android:src="@drawable/ic_logo"
                    tools:ignore="HardcodedText" />

                <!-- Título -->
                <TextView
                    android:layout_gravity="center"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="24dp"
                    android:gravity="center"
                    android:text="CONTAGEM"
                    android:textSize="24sp"
                    android:textStyle="bold"
                    android:textColor="@color/black"
                    tools:ignore="HardcodedText" />

                <!-- Ícone de código de barras -->

                <!-- Campo de entrada do código de barras -->
                <ImageView
                    android:layout_gravity="center"
                    android:layout_width="124dp"
                    android:layout_height="58dp"
                    android:layout_marginTop="16dp"
                    android:contentDescription="Ícone de escaneamento de código de barras"
                    android:src="@drawable/ic_iconbarcodescan"
                    tools:ignore="HardcodedText" />

                <Button
                    android:id="@+id/botao_escanear"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:text="Escanear Código de Barras"
                    android:layout_marginTop="16dp"
                    android:contentDescription="Botão para abrir o leitor de código de barras"
                    tools:ignore="HardcodedText" />

                <EditText
                    android:layout_marginTop="15dp"
                    android:id="@+id/edit_codigo_barras"
                    android:layout_gravity="center"
                    android:layout_width="350dp"
                    android:layout_height="49dp"
                    android:autofillHints=""
                    android:background="@drawable/text_box"
                    android:gravity="center"
                    android:hint="Digite ou escaneie o código de barras..."
                    android:textColorHint="@color/black"
                    android:textColor="@color/black"
                    android:imeOptions="actionDone"
                    android:padding="12dp"
                    tools:ignore="HardcodedText,TextFields" />
        </LinearLayout>

        <!-- Tela Final -->
        <LinearLayout
            android:id="@+id/layout_tela_final"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:visibility="gone"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent">

                <!-- Exibe informações do produto -->
                <TextView
                    android:id="@+id/texto_descricao"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textSize="18sp"
                    android:padding="12dp"
                    android:contentDescription="Descrição do produto"
                    tools:ignore="HardcodedText" />

                <!-- Campo de entrada para quantidade -->
                <EditText
                    android:id="@+id/edit_quantidade"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Insira a quantidade aqui..."
                    android:gravity="center"
                    android:inputType="number"
                    android:imeOptions="actionDone"
                    tools:ignore="HardcodedText" />

                <!-- Botão de salvar -->
                <Button
                    android:id="@+id/botao_salvar"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Salvar"
                    android:layout_gravity="center_horizontal"
                    android:contentDescription="Botão para salvar o produto e a quantidade"
                    tools:ignore="HardcodedText" />
        </LinearLayout>

        <ImageView
            android:id="@+id/botao_voltar"
            android:onClick="voltar"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:layout_gravity="start"
            android:contentDescription="Voltar"
            android:src="@drawable/ic_iconback"
            tools:layout_editor_absoluteX="16dp"
            tools:layout_editor_absoluteY="30dp"
            tools:ignore="HardcodedText,MissingConstraints" />
</androidx.constraintlayout.widget.ConstraintLayout>

