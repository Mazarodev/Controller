<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp"
    android:gravity="center_horizontal">

    <!-- Botão de voltar -->
    <ImageView
        android:layout_width="24dp"
        android:layout_height="24dp"
        android:src="@drawable/ic_iconback"
        android:contentDescription="Voltar"
        android:layout_gravity="start"
        android:onClick="onBackPressed"
        tools:ignore="HardcodedText" />

    <!-- Logo -->
    <ImageView
        android:layout_width="163dp"
        android:layout_height="144dp"
        android:layout_marginTop="6dp"
        android:src="@drawable/your_logo"
        tools:ignore="ContentDescription" />

    <!-- Título -->
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="CONTAGEM"
        android:textSize="24sp"
        android:textStyle="bold"
        android:gravity="center"
        android:layout_marginTop="37dp"
        tools:ignore="HardcodedText" />



    <!-- Icone do código de barras -->
    <ImageView

        android:layout_width="124dp"
        android:layout_height="58dp"
        android:layout_marginTop="16dp"
        android:src="@drawable/ic_iconbarcodescan"
        tools:ignore="ContentDescription" />

    <!-- Campo de entrada do código de barras -->
    <EditText
        android:id="@+id/edit_codigo_barras"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Digite ou escaneie o código de barras..."
        android:inputType="text"
        android:gravity="center"
        android:layout_marginTop="50dp"
        android:background="@drawable/botao_sair"
        android:padding="12dp"
        tools:ignore="Autofill,HardcodedText" />
</LinearLayout>
