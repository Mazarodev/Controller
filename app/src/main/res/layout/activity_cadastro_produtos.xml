<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:gravity="center_horizontal"
    android:padding="16dp"
    android:background="#e0e0e0">

    <!-- Título -->
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="NOVO PRODUTO"
        android:textSize="24sp"
        android:textStyle="bold"
        android:drawableStart="@drawable/ic_add"
        android:drawablePadding="8dp"
        android:gravity="center"
        android:textColor="#000000"
        android:layout_marginBottom="16dp" />

    <!-- Campo de Descrição -->
    <EditText
        android:id="@+id/editDescricao"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Descrição:"
        android:padding="10dp"
        android:background="@drawable/edit_text_background"
        android:layout_marginBottom="10dp"/>

    <!-- Campo de Código de Barra -->
    <EditText
        android:id="@+id/editCodigoBarra"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Código de barra:"
        android:padding="10dp"
        android:background="@drawable/edit_text_background"
        android:layout_marginBottom="10dp"/>

    <!-- Campo de Preço -->
    <EditText
        android:id="@+id/editPreco"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Preço:"
        android:padding="10dp"
        android:background="@drawable/edit_text_background"
        android:layout_marginBottom="10dp"/>

    <!-- Campo de Fornecedor -->
    <EditText
        android:id="@+id/editFornecedor"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Fornecedor:"
        android:padding="10dp"
        android:background="@drawable/edit_text_background"
        android:layout_marginBottom="20dp"/>

    <!-- Botão Salvar -->
    <Button
        android:id="@+id/btnSalvarUsuario"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Salvar"
        android:backgroundTint="#4CAF50"
        android:textColor="#FFFFFF"
        android:drawableStart="@drawable/ic_save"
        android:drawablePadding="8dp"
        android:paddingHorizontal="20dp"
        android:layout_marginBottom="20dp"/>

    <!-- Logo na parte inferior -->
    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/your_logo"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="20dp"/>
</LinearLayout>